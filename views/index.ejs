<!-- Hero Section -->
<div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-16 mb-12 rounded-lg">
    <div class="text-center max-w-6xl mx-auto px-4">
        <h1 class="text-4xl md:text-6xl font-bold mb-4">Selamat Datang di E-Perpustakaan</h1>
        <p class="text-xl md:text-2xl mb-8">Temukan berbagai koleksi buku dan artikel menarik</p>
        <% if (!user) { %>
            <div class="space-x-4">
                <a href="/auth/register" class="bg-white text-blue-600 hover:bg-blue-50 px-8 py-3 rounded-lg font-semibold transition duration-300 inline-block">
                    Daftar Sekarang
                </a>
                <a href="/auth/login" class="border-2 border-white text-white hover:bg-white hover:text-blue-600 px-8 py-3 rounded-lg font-semibold transition duration-300 inline-block">
                    Masuk
                </a>
            </div>
        <% } else { %>
            <p class="text-xl">Selamat datang kembali, <span class="font-semibold"><%= user.username %></span>!</p>
        <% } %>
    </div>
</div>

<!-- Quick Stats -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12 max-w-6xl mx-auto px-4">
    <div class="bg-white rounded-lg shadow-lg p-6 text-center transform hover:scale-105 transition duration-300">
        <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-book text-2xl text-blue-600"></i>
        </div>
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Total Buku</h3>
        <p class="text-3xl font-bold text-blue-600"><%= popularBooks.length %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow-lg p-6 text-center transform hover:scale-105 transition duration-300">
        <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-newspaper text-2xl text-green-600"></i>
        </div>
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Total Artikel</h3>
        <p class="text-3xl font-bold text-green-600"><%= latestArticles.length %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow-lg p-6 text-center transform hover:scale-105 transition duration-300">
        <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-users text-2xl text-purple-600"></i>
        </div>
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Total Anggota</h3>
        <p class="text-3xl font-bold text-purple-600">0</p>
    </div>
</div>

<!-- Featured Books -->
<div class="mb-12 max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-3xl font-bold text-gray-800">Buku Populer</h2>
        <a href="/books" class="text-blue-600 hover:text-blue-800 font-semibold transition duration-300">
            Lihat Semua <i class="fas fa-arrow-right ml-1"></i>
        </a>
    </div>
    
    <% if (popularBooks.length === 0) { %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 text-center">
        <i class="fas fa-book text-4xl text-blue-400 mb-4"></i>
        <p class="text-gray-600 text-lg">Belum ada buku yang ditampilkan.</p>
        <p class="text-gray-500 mt-2">Koleksi buku akan segera hadir!</p>
    </div>
    <% } else { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
        <% popularBooks.forEach(book => { %>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <img src="<%= book.cover || '/images/default-book-cover.png' %>" alt="<%= book.name %>" class="w-full h-48 object-cover">
            <div class="p-4">
                <h3 class="font-semibold text-lg text-gray-800 mb-2"><%= book.name %></h3>
                <p class="text-gray-600 text-sm">Penulis: <%= book.author || 'Tidak diketahui' %></p>
            </div>
        </div>
        <% }) %>
    </div>
    <% } %>
</div>

<!-- Latest Articles -->
<div class="mb-12 max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-3xl font-bold text-gray-800">Artikel Terbaru</h2>
        <a href="/articles" class="text-blue-600 hover:text-blue-800 font-semibold transition duration-300">
            Lihat Semua <i class="fas fa-arrow-right ml-1"></i>
        </a>
    </div>
    
    <% if (latestArticles.length === 0) { %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-6 text-center">
        <i class="fas fa-newspaper text-4xl text-green-400 mb-4"></i>
        <p class="text-gray-600 text-lg">Belum ada artikel yang ditampilkan.</p>
        <p class="text-gray-500 mt-2">Artikel menarik akan segera hadir!</p>
    </div>
    <% } else { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
        <% latestArticles.forEach(article => { %>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <img src="<%= article.cover || '/images/default-article-cover.png' %>" alt="<%= article.title %>" class="w-full h-48 object-cover">
            <div class="p-4">
                <h3 class="font-semibold text-lg text-gray-800 mb-2"><%= article.title %></h3>
                <p class="text-gray-600 text-sm"><%= article.excerpt %>...</p>
            </div>
        </div>
        <% }) %>
    </div>
    <% } %>
</div>

<!-- Features Section -->
<div class="bg-white rounded-lg shadow-lg p-8 mb-12 max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold text-gray-800 text-center mb-8">Fitur Unggulan</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center">
            <div class="bg-blue-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3">
                <i class="fas fa-search text-blue-600"></i>
            </div>
            <h3 class="font-semibold text-gray-800 mb-2">Pencarian Mudah</h3>
            <p class="text-gray-600 text-sm">Temukan buku dan artikel dengan mudah</p>
        </div>
        
        <div class="text-center">
            <div class="bg-green-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3">
                <i class="fas fa-heart text-green-600"></i>
            </div>
            <h3 class="font-semibold text-gray-800 mb-2">Favorit</h3>
            <p class="text-gray-600 text-sm">Simpan buku favorit Anda</p>
        </div>
        
        <div class="text-center">
            <div class="bg-purple-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3">
                <i class="fas fa-bookmark text-purple-600"></i>
            </div>
            <h3 class="font-semibold text-gray-800 mb-2">Peminjaman</h3>
            <p class="text-gray-600 text-sm">Pinjam buku secara digital</p>
        </div>
        
        <div class="text-center">
            <div class="bg-orange-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3">
                <i class="fas fa-mobile-alt text-orange-600"></i>
            </div>
            <h3 class="font-semibold text-gray-800 mb-2">Responsif</h3>
            <p class="text-gray-600 text-sm">Akses dari perangkat apapun</p>
        </div>
    </div>
</div>
