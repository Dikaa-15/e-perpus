<!-- Audiobooks Section -->
<section class="max-w-7xl mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-xl font-semibold text-gray-800">Audiobooks</h2>
    <div class="text-sm text-gray-500 space-x-4">
      <button class="hover:text-gray-800 font-semibold">Shots</button>
      <button class="hover:text-gray-800 font-semibold">E-Books</button>
      <button class="hover:text-gray-800 font-semibold">Book Awards</button>
    </div>
  </div>
  <div class="grid grid-cols-2 sm:grid-cols-5 gap-4">
    <% if (audiobooks && audiobooks.length > 0) { %>
      <% audiobooks.forEach(function(book) { %>
        <div class="relative bg-white rounded shadow hover:shadow-lg transition duration-300">
          <img src="<%= book.cover || '/images/default-book-cover.png' %>" alt="<%= book.name %>" class="w-full h-48 object-cover rounded-t" />
          <div class="p-2">
            <span class="absolute top-2 left-2 bg-black text-white text-xs px-1 rounded">NEW</span>
            <h3 class="text-sm font-semibold mt-2"><%= book.name %></h3>
            <p class="text-xs text-gray-600"><%= book.author || 'Unknown Author' %></p>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p class="text-gray-600">No audiobooks available at the moment.</p>
    <% } %>
  </div>
</section>

